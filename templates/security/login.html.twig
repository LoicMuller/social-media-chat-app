{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} | Connexion {% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-10 col-lg-12 col-md-9">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        {% if not is_granted('ROLE_USER') %}
                                        <h1 class="h4 text-gray-900 mb-4">Connexion</h1>
                                    </div>
                                    <form method="post" class="user">
                                        <div class="form-group">
                                            <input value="{{ last_username }}" required autofocus name="email"
                                                   type="email" class="form-control form-control-user"
                                                   id="inputEmail" aria-describedby="emailHelp"
                                                   placeholder="Entrez Votre Adresse Email...">
                                        </div>
                                        <div class="form-group">
                                            <input type="password" name="password" id="inputPassword"
                                                   class="form-control form-control-user"
                                                   autocomplete="current-password" placeholder="Mot De Passe"
                                                   required>
                                        </div>
                                        <div class="form-group">
                                            <input type="hidden" name="_csrf_token"
                                                   value="{{ csrf_token('authenticate') }}"
                                            >
                                        </div>
                                        <div class="form-group">
                                            <div class="custom-control custom-checkbox small">
                                                <input type="checkbox" class="custom-control-input" id="customCheck"
                                                       name="_remember_me">
                                                <label class="custom-control-label" for="customCheck">
                                                    Remember Me
                                                </label>
                                            </div>
                                        </div>
                                        <button type="submit" class="btn btn-primary btn-user btn-block">
                                            Se Connecter
                                        </button>
                                        <hr>
                                        <div class="text-center">
                                            <a class="small" href="{{ path('app_forgot_password_request') }}">
                                                Mot de passe oublié ?
                                            </a>
                                        </div>
                                        <div class="text-center">
                                            <a class="small" href="{{ path('app_register') }}">
                                                Créer un compte
                                            </a>
                                        </div>
                                        {% endif %}
                                    </form>
                                    <form method="post">
                                        {% if error %}
                                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                        {% endif %}

                                        {% if app.user %}
                                            <div class="mb-3">
                                                Vous êtes connecté en tant que {{ app.user.userIdentifier }}.
                                            </div>
                                        {% endif %}
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
