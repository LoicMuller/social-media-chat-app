{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} | Inscription {% endblock %}

{% block body %}
    <div class="container">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                {% if not is_granted('ROLE_USER') %}
                                <h1 class="h4 text-gray-900 mb-4">Inscription</h1>
                            </div>
                            {{ form_start(registrationForm, { 'attr' : { 'class': 'user' }}) }}
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    {{ form_row(registrationForm.firstName) }}
                                </div>
                                <div class="col-sm-6">
                                    {{ form_row(registrationForm.lastName) }}
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_row(registrationForm.email) }}
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    {{ form_row(registrationForm.plainPassword.first, { 'attr' : { 'class' : 'form-control form-control-user' }}) }}
                                </div>
                                <div class="col-sm-6">
                                    {{ form_row(registrationForm.plainPassword.second, { 'attr' : { 'class' : 'form-control form-control-user' }}) }}
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary btn-user btn-block">S'inscrire</button>
                            <hr>
                            {% endif %}
                            {{ form_end(registrationForm) }}
                            <div class="text-center">
                                <a class="small" href="{{ path('app_forgot_password_request') }}">
                                    Mot de passe oubli√© ?
                                </a>
                            </div>
                            <div class="text-center">
                                <a class="small" href="{{ path('app_login') }}">
                                    Se connecter
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
